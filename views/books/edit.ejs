<% include ../partials/header %>
        <div class="container">
            <div class="row">
                <div class="col">
                    <% include ../partials/nav %>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <h3><%= title %></h3>
                </div>
            </div>
            <form action="/books/<%= book._id %>/update" class='user-form' method="POST">
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label for='title'>Title:</label>
                        <input class='form-control' type='text' value='<%= book.title %>' name='title'>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label for='author'>Author:</label>
                        <select name="author">
                        <# for(const book of book.author) { #>
                            <option value='<%= book.author._id %>'><%= book.author.first_name %> <%= book.author.last_name %></option>
                        <# } #>
                        </select>
                        <input class='form-control' type='text' name='author'>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label for='year'>Year:</label>
                        <input class='form-control' type='text' value='<%= book.year %>' name='year'>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label for='pages'>Pages:</label>
                        <input class='form-control' type='text' value='<%= book.pages %>' name='pages'>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label for='genre'>Genre:</label>
                        <input class='form-control' type='text' value='<%= book.genre %>' name='genre'>
                    </div>
                    <div class="form-group">
                        <button class='btn btn-primary btn-sm' type='submit'>Submit</button>
                    </div>
                </div>
            </div>
            </form>
            <div class="row">
                <div class="col">
                    <div class="errors">
                    <% if(messages.book_update_error) { %>
                        <% for (const key of messages.book_update_error) { %>
                            <p><%= key %></p>
                        <% } %>
                    <% } %>
                    </div>
                </div>
            </div>
        </div>
<% include ../partials/footer %>