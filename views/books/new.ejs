<% include ../partials/header %>
        <div class="container">
            <div class="row">
                <div class="col">
                    <% include ../partials/nav %>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <h3><%= title %></h3>
                </div>
            </div>
            <form action="/books" class='user-form' method="POST">
            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <label for='title'>Title:</label>
                        <input class='form-control' type='text' name='title'>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label for='author'>Author:</label>
                        <select name="author" id="">
                        <% for(const author of authors) { %>
                            <option value='<%= author._id %>'><%= author.first_name %> <%= author.last_name %></option>
                        <% } %>
                        </select>
                        <!-- <input class='form-control' type='text' name='author'> -->
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-3">
                    <div class="form-group">
                        <label for='year'>Year:</label>
                        <input class='form-control' type='text' name='year'>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-3">
                    <div class="form-group">
                        <label for='pages'>Pages:</label>
                        <input class='form-control' type='text' name='pages'>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <label for='genre'>Genre:</label>
                        <input class='form-control' type='text' name='genre'>
                    </div>
                    <div class="form-group">
                        <button class='btn btn-primary btn-sm' type='submit'>Submit</button>
                    </div>
                </div>
            </div>
            </form>
            <div class="row">
                <div class="col">
                    <div class="errors">
                    <% if(messages.add_book_error) { %>
                        <% for (const key of messages.add_book_error) { %>
                            <p><%= key %></p>
                        <% } %>
                    <% } %>
                    </div>
                </div>
            </div>
        </div>
<% include ../partials/footer %>